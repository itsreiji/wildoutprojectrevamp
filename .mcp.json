{
  "mcpServers": {
    "github": {
      "type": "stdio",
      "command": "bunx",
      "args": ["@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub integration for issue/PR management and repository operations"
    },
    "supabase": {
      "type": "stdio",
      "command": "bunx",
      "args": ["@modelcontextprotocol/server-supabase"],
      "env": {
        "SUPABASE_URL": "${SUPABASE_URL}",
        "SUPABASE_KEY": "${SUPABASE_KEY}"
      },
      "description": "Supabase database access and schema management"
    },
    "context7": {
      "type": "stdio",
      "command": "bunx",
      "args": ["context7-mcp"],
      "description": "Web search and documentation lookup"
    },
    "sequential-thinking": {
      "type": "stdio",
      "command": "bunx",
      "args": ["@modelcontextprotocol/server-sequential-thinking"],
      "description": "Sequential thinking for complex decisions and workflows"
    }
  },
  "mcpServerGroups": {
    "development": ["github", "context7", "sequential-thinking"],
    "production": ["github", "supabase"],
    "full": ["github", "supabase", "context7", "sequential-thinking"]
  }
}